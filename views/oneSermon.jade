extends layout

block content
  h1 #{sermon.sermon_title}
  iframe(type='text/html' width='640' height='390'
    src='#{sermon.video}'
    frameborder='0')
  p From the sermon series #{sermon.seriestitle}. #{sermon.description}
  form(action='/oneSermon/'+sermon.sermon_title, method='post')
    each note in notes
      div(data-id=note.id class=note.item_type) #{note.item_text}
    button(type='submit') Submit
  script(src='/javascripts/populateForm.js')
  
